    </UserControl.Resources>

    <StackPanel
        Margin="0,0,0,0"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="{Binding MsgBox_BackgroundColor}">
        <Border BorderBrush="{Binding MsgBox_BorderColor}" BorderThickness="1">
            <Border BorderBrush="{StaticResource SystemAccentColor}" BorderThickness="1">
                <DockPanel HorizontalAlignment="Center">

                    <DockPanel
                        Margin="25,15,25,0"
                        HorizontalAlignment="Center"
                        DockPanel.Dock="Top">

                        <Grid
                            Width="60"
                            Margin="0,0,20,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            DockPanel.Dock="Left"
                            IsVisible="{Binding MsgBox_Icon_Visab}">
                            <DrawingPresenter Drawing="{Binding MsgBox_Icon}" />
                        </Grid>

                        <DockPanel
                            Margin="0"
                            VerticalAlignment="Center"
                            DockPanel.Dock="Bottom">
                            <TextBlock
                                Name="TxtBlck_Title"
                                HorizontalAlignment="Left"
                                DockPanel.Dock="Top"
                                FontSize="22"
                                FontWeight="Bold"
                                IsVisible="{Binding MsgBox_Title_Visab}"
                                Text="{Binding MsgBox_Title_Txt}" />
                            <TextBlock
                                Name="TxtBlck_Core"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                DockPanel.Dock="Top"
                                FontSize="17"
                                Text="{Binding MsgBox_Txt}" />
                            <ComboBox
                                Name="CmbBx"
                                Margin="0,15,0,0"
                                DockPanel.Dock="Bottom"
                                IsVisible="{Binding MsgBox_ComboBox_Visab}"
                                Items="{Binding MsgBox_ComboBox_Item, Mode=TwoWay}"
                                SelectedIndex="{Binding MsgBox_ComboBox_Index, Mode=TwoWay}"
                                SelectedItem="{Binding MsgBox_ComboBox_Item, Mode=TwoWay}" />
                            <TextBox
                                Name="TxtBx"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                DockPanel.Dock="Bottom"
                                IsVisible="{Binding MsgBox_TxtBox_Visb}"
                                Text="{Binding MsgBox_TxtBox_Txt}" />
                        </DockPanel>

                    </DockPanel>

                    <StackPanel
                        Margin="20"
                        HorizontalAlignment="Center"
                        DockPanel.Dock="Bottom"
                        Orientation="Horizontal"
                        Spacing="20">

                        <WrapPanel
                            Margin="0,0"
                            HorizontalAlignment="Center"
                            IsVisible="{Binding MsgBox_Btn1_Visab}"
                            Orientation="Horizontal">
                            <Border BorderBrush="Black" BorderThickness="0.5">
                                <Button
                                    MinWidth="50"
                                    Margin="0"
                                    HorizontalAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    BorderBrush="{StaticResource SystemAccentColor}"
                                    BorderThickness="0.5"
                                    Command="{Binding MsgBox_Btn1_Click}"
                                    Content="{Binding MsgBox_Btn1_Txt}"
                                    FontSize="17" />
                            </Border>
                        </WrapPanel>

                        <WrapPanel
                            Margin="0,0"
                            HorizontalAlignment="Center"
                            IsVisible="{Binding MsgBox_Btn2_Visab}"
                            Orientation="Horizontal">
                            <Border BorderBrush="Black" BorderThickness="0.5">
                                <Button
                                    MinWidth="50"
                                    Margin="0"
                                    HorizontalAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    BorderBrush="{StaticResource SystemAccentColor}"
                                    BorderThickness="0.5"
                                    Command="{Binding MsgBox_Btn2_Click}"
                                    Content="{Binding MsgBox_Btn2_Txt}"
                                    FontSize="17" />
                            </Border>
                        </WrapPanel>

                        <WrapPanel
                            Margin="0,0"
                            HorizontalAlignment="Center"
                            IsVisible="{Binding MsgBox_Btn3_Visab}"
                            Orientation="Horizontal">
                            <Border BorderBrush="Black" BorderThickness="0.5">
                                <Button
                                    MinWidth="50"
                                    Margin="0"
                                    HorizontalAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    BorderBrush="{StaticResource SystemAccentColor}"
                                    BorderThickness="0.5"
                                    Command="{Binding MsgBox_Btn3_Click}"
                                    Content="{Binding MsgBox_Btn3_Txt}"
                                    FontSize="17" />
                            </Border>
                        </WrapPanel>

                    </StackPanel>

                </DockPanel>
            </Border>
        </Border>
    </StackPanel>

</UserControl>
